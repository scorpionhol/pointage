
<%- include('partials/header', { title: pageTitle }) %>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">Tableau de bord des agents</h2>
    <nav>
        <a href="/badgeuse" class="btn btn-outline-success btn-sm me-2">Badgeuse virtuelle</a>
        <a href="/agents" class="btn btn-outline-primary btn-sm me-2">Liste des agents</a>
        <a href="/historique" class="btn btn-outline-secondary btn-sm">Historique</a>
    </nav>
</div>

<% if (typeof agents !== 'undefined' && agents.length > 0) { %>
    <div class="row">
        <% agents.forEach(function(a) { %>
            <div class="col-md-6 col-lg-4 mb-3">
                <div class="card h-100 shadow-sm">
                    <div class="card-body d-flex flex-column justify-content-between">
                        <div>
                            <h5 class="card-title mb-1"><strong><%= a.nom %></strong></h5>
                            <p class="card-text text-muted mb-2"><%= a.poste %></p>
                        </div>
                        <a href="/pointage/<%= a.id %>" class="btn btn-success btn-sm mt-auto">Pointer</a>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
<% } else { %>
    <div class="alert alert-info text-center">Aucun agent Ã  afficher.</div>
<% } %>

<%- include('partials/footer') %>
