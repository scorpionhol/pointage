  }

  .slide-gradient-6 {
    background: linear-gradient(135deg, #30cfd0 0%, #330867 100%);
  }

  .slide-content {
    position: relative;
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    color: white;
    text-align: center;
    padding: 0 20px;
  }

  /* Scroll fluide vers les sections */
  html {
    scroll-behavior: smooth;
  }

  /* Ajustement pour les ancres avec navbar fixe */
  section[id] {
    scroll-margin-top: 0;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .carousel-caption h1 {
      font-size: 2rem !important;
    }

    .carousel-caption p {
      font-size: 1rem;
    }

    .carousel-control-prev,
    .carousel-control-next {
      width: 40px;
      height: 40px;
    }
  }
</style>

